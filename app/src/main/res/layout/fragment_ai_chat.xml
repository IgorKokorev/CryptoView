<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient315"
    tools:context=".views.fragments.AiChatFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_rv"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_padding"
            app:reverseLayout="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/container_question"
            tools:listitem="@layout/chat_item" />

    <LinearLayout
        android:id="@+id/container_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/small_padding"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_weight="1"
            android:background="@color/base1"
            android:hint="@string/ai_chat_hint"
            android:imeOptions="actionSend"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:padding="@dimen/medium_padding"
            android:scrollbars="none"
            android:textColorHint="@color/grey" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_send"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/button_send_hint"
            app:icon="@drawable/icon_send"
            app:iconGravity="textEnd"
            app:iconTint="@color/iconColor"
            app:iconSize="30dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>