<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient315"
    android:padding="@dimen/medium_padding"
    tools:context=".views.fragments.ChartFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="@+id/logo"
        app:layout_constraintBottom_toBottomOf="@+id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="@dimen/big_padding"
        android:textSize="@dimen/big_text"
        android:textStyle="bold"
        tools:text="Symbol" />

    <LinearLayout
        android:id="@+id/price_stat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/medium_padding"
        app:layout_constraintTop_toBottomOf="@+id/logo">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:padding="@dimen/small_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:maxLines="1"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/medium_text"
                android:text="Price:" />

            <TextView
                android:id="@+id/ath_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:maxLines="1"
                android:text="ATH:"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/medium_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:padding="@dimen/small_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textSize="@dimen/medium_text"
                tools:text="price" />

            <TextView
                android:id="@+id/ath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textSize="@dimen/medium_text"
                tools:text="ATH" />

        </LinearLayout>

        <include layout="@layout/vertical_line" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="end"
            android:padding="@dimen/small_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vol_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/medium_text"
                android:text="Vol:" />

            <TextView
                android:id="@+id/mcap_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textSize="@dimen/medium_text"
                android:text="MCap:" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:padding="@dimen/small_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textSize="@dimen/medium_text"
                tools:text="vol" />

            <TextView
                android:id="@+id/mcap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textSize="@dimen/medium_text"
                tools:text="mcap" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/changes_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_padding"
        android:maxLines="1"
        android:text="Price change (%):"
        android:textSize="@dimen/big_text"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/price_stat" />

    <LinearLayout
        android:id="@+id/changes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_padding"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/changes_header">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="1h"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/change_1h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:padding="@dimen/min_padding"
                android:textAlignment="center"
                android:textSize="@dimen/tiny_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="12h"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/change_12h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:padding="@dimen/min_padding"
                android:textAlignment="center"
                android:textSize="@dimen/tiny_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="24h"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/change_24h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:padding="@dimen/min_padding"
                android:textAlignment="center"
                android:textSize="@dimen/tiny_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="7d"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/change_7d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:padding="@dimen/min_padding"
                android:textAlignment="center"
                android:textSize="@dimen/tiny_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="30d"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/change_30d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:padding="@dimen/min_padding"
                android:textAlignment="center"
                android:textSize="@dimen/tiny_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="1Y"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/change_1y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:padding="@dimen/min_padding"
                android:textAlignment="center"
                android:textSize="@dimen/tiny_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="ATH"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/change_ath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:padding="@dimen/min_padding"
                android:textAlignment="center"
                android:textSize="@dimen/tiny_text" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/interval_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_padding"
        android:padding="@dimen/min_padding"
        android:orientation="horizontal"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@+id/changes">


        <TextView
            android:id="@+id/d7"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/min_padding"
            android:background="@drawable/rounded_rectangle"
            android:gravity="center"
            android:padding="@dimen/min_padding"
            android:text="1w"
            android:textSize="@dimen/medium_text"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/m1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/min_padding"
            android:background="@drawable/rounded_rectangle"
            android:gravity="center"
            android:padding="@dimen/min_padding"
            android:text="1m"
            android:textSize="@dimen/medium_text"
            android:layout_weight="1"
            app:layout_constraintStart_toEndOf="@+id/d7"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/m3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/min_padding"
            android:background="@drawable/rounded_rectangle"
            android:gravity="center"
            android:padding="@dimen/min_padding"
            android:text="3m"
            android:textSize="@dimen/medium_text"
            android:layout_weight="1"
            app:layout_constraintStart_toEndOf="@+id/m1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/m6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/min_padding"
            android:background="@drawable/rounded_rectangle"
            android:gravity="center"
            android:padding="@dimen/min_padding"
            android:text="6m"
            android:textSize="@dimen/medium_text"
            android:layout_weight="1"
            app:layout_constraintStart_toEndOf="@+id/m3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ytd"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/min_padding"
            android:background="@drawable/rounded_rectangle"
            android:gravity="center"
            android:padding="@dimen/min_padding"
            android:text="YTD"
            android:textSize="@dimen/medium_text"
            android:layout_weight="1"
            app:layout_constraintStart_toEndOf="@+id/m6"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/y1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/min_padding"
            android:background="@drawable/rounded_rectangle"
            android:gravity="center"
            android:padding="@dimen/min_padding"
            android:text="Y"
            android:textSize="@dimen/medium_text"
            android:layout_weight="1"
            app:layout_constraintStart_toEndOf="@+id/ytd"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>

    <com.highsoft.highcharts.core.HIChartView
        android:id="@+id/chart_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/min_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/interval_selector" />

</androidx.constraintlayout.widget.ConstraintLayout>
