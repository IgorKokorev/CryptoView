<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient135"
    android:padding="@dimen/medium_padding"
    tools:context=".views.fragments.BinanceFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/market_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/medium_padding"
        android:paddingBottom="@dimen/medium_padding"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/symbol_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="3"
                android:maxLines="1"
                android:gravity="start"
                android:text="Binance ticker:"
                android:textSize="@dimen/big_text"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/symbol_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle_base"
                android:popupBackground="@drawable/rounded_rectangle_base"
                android:layout_weight="2"
                android:layout_gravity="end"
                android:spinnerMode="dropdown"
                tools:listitem="@layout/spinner_text_item"
                android:dropDownSelector="@color/colorAccent" />

            <Spinner
                android:id="@+id/interval_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_padding"
                android:background="@drawable/rounded_rectangle_base"
                android:popupBackground="@drawable/rounded_rectangle_base"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:spinnerMode="dropdown"
                tools:listitem="@layout/spinner_text_item"
                android:dropDownSelector="@color/colorAccent" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/market_data">

        <com.anychart.AnyChartView
            android:id="@+id/any_chart_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>