<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient135"
    android:padding="@dimen/medium_padding"
    tools:context=".views.fragments.BinanceFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/market_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/medium_padding"
        android:paddingBottom="@dimen/medium_padding"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/selectors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/symbol_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_weight="3"
                android:maxLines="1"
                android:text="@string/binance_ticker"
                android:textSize="@dimen/big_text"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/symbol_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_weight="2"
                android:background="@drawable/rounded_rectangle_base"
                android:dropDownSelector="@color/colorAccent"
                android:popupBackground="@drawable/rounded_rectangle_base"
                android:spinnerMode="dropdown"
                tools:listitem="@layout/spinner_text_item" />

            <Spinner
                android:id="@+id/interval_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="@dimen/medium_padding"
                android:layout_weight="1"
                android:background="@drawable/rounded_rectangle_base"
                android:dropDownSelector="@color/colorAccent"
                android:popupBackground="@drawable/rounded_rectangle_base"
                android:spinnerMode="dropdown"
                tools:listitem="@layout/spinner_text_item" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/price_and_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/medium_padding"
            android:layout_marginBottom="@dimen/medium_padding"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/selectors" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="10"
                android:paddingStart="@dimen/small_padding"
                android:paddingEnd="@dimen/small_padding"
                android:gravity="center_vertical|end" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:maxLines="1"
                    android:textSize="@dimen/small_text"
                    android:textAlignment="viewEnd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/change_24h"
                    android:textSize="@dimen/small_text"
                    android:textAlignment="viewEnd" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="10"
                android:paddingStart="@dimen/small_padding"
                android:paddingEnd="@dimen/small_padding"
                android:gravity="center_vertical|end" >

                <TextView
                    android:id="@+id/last_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/price"
                    android:maxLines="1"
                    android:textSize="@dimen/small_text"
                    android:textAlignment="viewEnd" />

                <TextView
                    android:id="@+id/change_24h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/change_24h"
                    android:maxLines="1"
                    android:textSize="@dimen/small_text"
                    android:textAlignment="viewEnd" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="10"
                android:paddingStart="@dimen/small_padding"
                android:paddingEnd="@dimen/small_padding"
                android:gravity="center_vertical|end" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/volume"
                    android:maxLines="1"
                    android:textSize="@dimen/small_text"
                    android:textAlignment="viewEnd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/medium_text"
                    android:maxLines="1"
                    android:textAlignment="viewEnd" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="10"
                android:paddingStart="@dimen/small_padding"
                android:paddingEnd="@dimen/small_padding"
                android:gravity="center_vertical|end" >

                <TextView
                    android:id="@+id/volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    tools:text="@string/volume"
                    android:textSize="@dimen/small_text"
                    android:textAlignment="viewEnd" />

                <TextView
                    android:id="@+id/value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/value"
                    android:maxLines="1"
                    android:textSize="@dimen/small_text"
                    android:textAlignment="viewEnd" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="10"
                android:paddingStart="@dimen/small_padding"
                android:paddingEnd="@dimen/small_padding"
                android:gravity="center_vertical|start" >

                <TextView
                    android:id="@+id/base_asset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Base"
                    android:maxLines="1"
                    android:textSize="@dimen/small_text"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/quote_asset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Quote"
                    android:maxLines="1"
                    android:textSize="@dimen/small_text"
                    android:textAlignment="viewStart" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ohl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/price_and_volume"
            android:orientation="horizontal"
            android:padding="@dimen/small_padding"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open:"
                android:maxLines="1"
                android:layout_gravity="end|center_vertical"
                android:textAlignment="viewEnd" />
            <TextView
                android:id="@+id/open_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Open"
                android:maxLines="1"
                android:layout_weight="10"
                android:padding="@dimen/small_padding"
                android:layout_gravity="start|center_vertical"
                android:textAlignment="viewStart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="High:"
                android:layout_gravity="end|center_vertical"
                android:textAlignment="viewEnd" />
            <TextView
                android:id="@+id/high_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Open"
                android:layout_weight="10"
                android:maxLines="1"
                android:padding="@dimen/small_padding"
                android:layout_gravity="start|center_vertical"
                android:textAlignment="viewStart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low:"
                android:maxLines="1"
                android:layout_gravity="end|center_vertical"
                android:textAlignment="viewEnd" />
            <TextView
                android:id="@+id/low_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Open"
                android:maxLines="1"
                android:padding="@dimen/small_padding"
                android:layout_gravity="start|center_vertical"
                android:textAlignment="viewStart" />

        </LinearLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/tech_indicators"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:showDivider="middle"
            app:dividerDrawable="@drawable/flexbox_divider"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:layout_constraintTop_toBottomOf="@+id/ohl"
            >

        </com.google.android.flexbox.FlexboxLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.anychart.AnyChartView
        android:id="@+id/any_chart_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/market_data" />


</androidx.constraintlayout.widget.ConstraintLayout>