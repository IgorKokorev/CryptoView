<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".views.fragments.CoinFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/coin_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base1"
        android:contentDescription="Select coin information"
        app:tabMode="fixed"
        app:tabTextColor="@color/white"
        app:tabIconTint="@color/base8"
        app:tabBackground="@drawable/rounded_up_rectangle"
        app:tabIndicatorColor="@color/base8"
        app:tabIndicatorFullWidth="true"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/coin_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>