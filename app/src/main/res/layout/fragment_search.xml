<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient45"
    tools:context=".views.fragments.MainFragment">



        <LinearLayout
            android:id="@+id/rv_headers"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/dark"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/header_symbol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="15"
                android:text="Symbol"
                android:textAlignment="viewStart"
                android:autoSizeTextType="uniform"
                android:padding="1dp"/>

            <TextView
                android:id="@+id/header_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="20"
                android:text="Price"
                android:textAlignment="center"
                android:autoSizeTextType="uniform"
                android:padding="1dp" />

            <TextView
                android:id="@+id/header_change"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="15"
                android:text="%24hr"
                android:textAlignment="center"
                android:autoSizeTextType="uniform"
                android:padding="1dp" />

            <TextView
                android:id="@+id/header_ath"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="20"
                android:text="ATH"
                android:textAlignment="center"
                android:autoSizeTextType="uniform"
                android:padding="1dp" />

            <TextView
                android:id="@+id/header_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="20"
                android:text="Volume"
                android:textAlignment="viewEnd"
                android:autoSizeTextType="uniform"
                android:padding="1dp" />

            <TextView
                android:id="@+id/header_mcap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="20"
                android:text="MCap"
                android:textAlignment="viewEnd"
                android:autoSizeTextType="uniform"
                android:padding="1dp" />

        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_headers"
        tools:listitem="@layout/search_coin_item" />

</androidx.constraintlayout.widget.ConstraintLayout>
