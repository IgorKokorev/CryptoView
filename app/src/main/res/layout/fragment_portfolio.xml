<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.PortfolioFragment">

    <LinearLayout
        android:id="@+id/portfolio_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent" >


    <TextView
        android:id="@+id/portfolio_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/portfolio"
        android:layout_margin="@dimen/medium_padding"
        android:layout_weight="1"
        android:layout_gravity="center_vertical|start"
        android:textSize="@dimen/big_text"
        android:textStyle="bold"
        />

        <TextView
            android:id="@+id/portfolio_performance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/portfolio_performance"
            android:layout_margin="@dimen/medium_padding"
            android:layout_gravity="center_vertical|end"
            android:textSize="@dimen/big_text"
            android:paddingTop="@dimen/small_padding"
            android:paddingBottom="@dimen/small_padding"
            android:paddingStart="@dimen/medium_padding"
            android:paddingEnd="@dimen/medium_padding"
            android:background="@drawable/rounded_rectangle_base"
            />
    </LinearLayout>

    <include
        layout="@layout/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/portfolio_header"
        android:layout_margin="@dimen/small_padding" />

    <LinearLayout
        android:id="@+id/portfolio_valuation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_padding"
        android:paddingBottom="@dimen/medium_padding"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/portfolio_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/value_colon"
                android:maxLines="1"
                android:textSize="@dimen/medium_text"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/total_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Value"
                android:textSize="@dimen/medium_text"
                android:layout_gravity="end"
                android:textAlignment="viewEnd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_p_l"
                android:textSize="@dimen/medium_text"
                android:maxLines="1"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/total_pnl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="P/L:"
                android:textSize="@dimen/medium_text"
                android:layout_gravity="end"
                android:paddingStart="@dimen/medium_padding"
                android:paddingEnd="@dimen/medium_padding"
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/total_pnl_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="P/L:"
                android:textSize="@dimen/medium_text"
                android:layout_gravity="end"
                android:textAlignment="viewEnd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/daily_p_l"
                android:textSize="@dimen/medium_text"
                android:maxLines="1"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/daily_pnl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="P/L:"
                android:textSize="@dimen/medium_text"
                android:layout_gravity="end"
                android:paddingStart="@dimen/medium_padding"
                android:paddingEnd="@dimen/medium_padding"
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/daily_pnl_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="P/L:"
                android:textSize="@dimen/medium_text"
                android:layout_gravity="end"
                android:textAlignment="viewEnd" />

        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/alert_text"
        layout="@layout/portfolio_coin_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/portfolio_valuation" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/portfolio_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/small_padding"
        android:layout_marginEnd="@dimen/small_padding"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alert_text"
        tools:listitem="@layout/portfolio_coin_item" />

</androidx.constraintlayout.widget.ConstraintLayout>