<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_background_gradient"
    tools:context=".views.fragments.SettingsFragment">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch text"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:useMaterialThemeColors="false"
        app:thumbTint="@color/background1"
        app:trackTint="@color/background8"
        android:paddingHorizontal="@dimen/medium_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/switch_element"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/accent1"
        android:textSize="36dp"
        android:text="SettingsFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>
