<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_background_gradient"
    tools:context=".views.fragments.SettingsFragment">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/medium_padding"
        android:text="Switch text"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:thumbTint="@color/base1"
        app:trackTint="@color/base8"
        app:useMaterialThemeColors="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/switch_element">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min MCap" />

        <com.google.android.material.slider.Slider
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Minimum market cap"
            android:valueFrom="0"
            android:valueTo="10"
            app:labelBehavior="gone"
            app:thumbColor="@color/accent6"
            app:thumbRadius="20dp"
            app:thumbWidth="20dp"
            app:thumbHeight="20dp"
            app:thumbElevation="10dp"
            app:haloColor="@color/white"
            app:trackHeight="5dp"
            app:trackColorInactive="@color/accent3"
            app:trackColorActive="@color/accent5"
            />

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
