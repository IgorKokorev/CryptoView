<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.CryptoView" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textViewStyle">@style/CVTextViewStyle</item>
        <item name="android:textAppearance">@style/CVTextAppearance</item>
        <item name="android:alertDialogStyle">@style/CVDialogStyle</item>
        <item name="bottomNavigationStyle">@style/CVBottomBar</item>
        <item name="sliderStyle">@style/CVSliderStyle</item>
        <item name="checkboxStyle">@style/CVCheckBox</item>
    </style>

    <style name="CVTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="color">@color/textColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorLink">@color/textColor</item>
    </style>

    <style name="CVCardView" parent="Widget.MaterialComponents.CardView" >
        <item name="cardBackgroundColor">@color/base2</item>
    </style>
    <style name="CVMaterialToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/base1</item>
    </style>

    <style name="CVTextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="color">@color/textColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorLink">@color/textColor</item>
    </style>

    <style name="CVCheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/accent3</item>
        <item name="buttonIconTint">@color/textColor</item>
    </style>

    <style name="CVBottomBar" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/base1</item>
        <item name="itemTextColor">@color/iconColor</item>
        <item name="itemIconTint">@color/iconColor</item>
    </style>

    <style name="CVDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/base2</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="color">@color/textColor</item>
        <item name="android:colorAccent">@color/textColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/CVNegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/CVNeutralButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/CVPositiveButtonStyle</item>
    </style>

    <style name="CVNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="backgroundTint">@color/base3</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CVNeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="backgroundTint">@color/base3</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CVPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="backgroundTint">@color/base3</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CVSliderStyle" parent="Widget.Material3.Slider">
        <item name="backgroundTint">@color/base1</item>
        <item name="labelStyle">@style/CVTooltip</item>
        <item name="labelBehavior">gone</item>
        <item name="thumbColor">@color/accent6_state_list</item>
        <item name="thumbRadius">20dp</item>
        <item name="thumbWidth">20dp</item>
        <item name="thumbHeight">20dp</item>
        <item name="thumbElevation">5dp</item>
        <item name="thumbTrackGapSize">20dp</item>
        <item name="haloColor">@color/baseDarkTransparent</item>
        <item name="haloRadius">20dp</item>
        <item name="trackHeight">5dp</item>
        <item name="trackColorInactive">@color/accent3_state_list</item>
        <item name="trackColorActive">@color/accent6_state_list</item>
        <item name="trackStopIndicatorSize">0dp</item>
        <item name="tickVisible">false</item>
        <item name="tickColorInactive">@color/accent3_state_list</item>
        <item name="tickColorActive">@color/accent6_state_list</item>
    </style>

    <style name="CVTooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/CVTextAppearance</item>
        <item name="backgroundTint">@color/base5</item>
    </style>

    <style name="Theme.CryptoView" parent="Base.Theme.CryptoView" />

</resources>